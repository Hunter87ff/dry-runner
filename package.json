{
    "name": "dry-runner",
    "displayName": "C/C+ Runner",
    "description": "Run C/C++ code in one click.",
    "version": "1.0.1",
    "publisher": "Spruce87",
    "author": {
        "name": "hunter87"
    },
    "license": "MIT",
    "homepage": "https://github.com/hunter87/dry-runner",
    "repository": {
        "type": "git",
        "url": "https://github.com/hunter87/dry-runner"
    },
    "bugs": {
        "url": "https://github.com/hunter87/dry-runner/issues"
    },
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.75.0"
    },
    "keywords": [
        "c",
        "cpp",
        "run",
        "c++",
        "compile"
    ],
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "dry-runner.run",
                "title": "Run",
                "icon": "$(debug-start)"
            },
            {
                "command": "dry-runner.restart",
                "title": "Restart",
                "icon": "$(debug-restart)"
            },
            {
                "command": "dry-runner.stop",
                "title": "Stop",
                "icon": "$(debug-stop)"
            }
        ],
        "configuration": {
            "title": "dry-runner",
            "properties": {
                "dry-runner.compilerPath": {
                    "type": "string",
                    "default": "C:\\MinGW64\\bin",
                    "description": "Compiler path for C/C++"
                }
            }
        },
        "keybindings": [
            {
                "command": "dry-runner.run",
                "when": "!dry-runner.running",
                "key": "f5"
            },
            {
                "command": "dry-runner.restart",
                "when": "dry-runner.running",
                "key": "f5"
            },
            {
                "command": "dry-runner.stop",
                "when": "dry-runner.running",
                "key": "f4"
            }
        ],
        "menus": {
            "editor/title/run": [
                {
                    "command": "dry-runner.run",
                    "when": "editorLangId =~ /(c|cpp)/ && !dry-runner.running"
                },
                {
                    "command": "dry-runner.restart",
                    "when": "editorLangId =~ /(c|cpp)/ && dry-runner.running"
                },
                {
                    "command": "dry-runner.stop",
                    "when": "editorLangId =~ /(c|cpp)/ && dry-runner.running"
                }
            ],
            "editor/context": [
                {
                    "command": "dry-runner.run",
                    "when": "editorLangId =~ /(c|cpp)/ && !dry-runner.running",
                    "group": "navigation"
                },
                {
                    "command": "dry-runner.restart",
                    "when": "editorLangId =~ /(c|cpp)/ && dry-runner.running",
                    "group": "navigation"
                },
                {
                    "command": "dry-runner.stop",
                    "when": "editorLangId =~ /(c|cpp)/ && dry-runner.running",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.63.0",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "@vscode/test-electron": "^1.6.2",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "typescript": "^4.9.5"
    }
}
